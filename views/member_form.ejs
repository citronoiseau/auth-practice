<html>
  <head>
    <title>Membership</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1> Apply for a member status </h1>
  <div>
    To get the secret password, translate this phrase: <em>J'aime les chevaux</em> (no spaces, no capital letters).
  </div>
</div>
    <%- include("partials/errors.ejs") %>
   <form action="/users/<%= user.id %>/membership" method="POST">
    
<div class="input-form"> 
  <label for="passworde">Secret password: </label>
  <input
    type="password"
    name="password"
    id="password"
    required
  >
  <button type="button" onclick="togglePassword('password', this)">Show</button>
</div>

    <button type="submit">Apply!</button>
  </form>
  <a href="/">Homepage</a>
</html>

<script>
  function togglePassword(fieldId, btn) {
    const field = document.getElementById(fieldId);
    if (field.type === "password") {
      field.type = "text";
      btn.textContent = "Hide";
    } else {
      field.type = "password";
      btn.textContent = "Show";
    }
  }
</script>
